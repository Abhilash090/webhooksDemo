<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>53.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Lookup Component</masterLabel>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <!-- Configuring the design attributes -->
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="objName" type="String" default="Account" label="Object Api Name" role="inputOnly" />
            <property name="iconName" type="String" default="standard:account" label="icon to display" role="inputOnly"/>
            <property name="labelName" type="String" default="Account" label="label to display" role="inputOnly"/>
            <property name="displayFields" type="String" default="Name, Rating, AccountNumber" label="Display fields" role="inputOnly"/>
            <property name="placeholder" type="String" label="Placeholder" role="inputOnly"/>
            <property name="searchField" type="String" label="Fields" role="inputOnly"/>
            <property name="valueName" type="String" label="The Name of the selected record"/>
            <property name="valueId" type="String"  label="The Id of the selected record"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>